{
    "compilerOptions":{
       "target":"ESNext",
       "module":"commonjs",
       "declaration":false,
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "sourceMap":true,
       "pretty":true,
       "noImplicitAny":false,
       "noImplicitReturns":false,
       "noImplicitUseStrict":false,
       "strict": true,
       "incremental": true,
       "outDir":"build/",
       "baseUrl":"src/"
    },
    "include":[
       "src/**/*"
    ],
    "exclude":[
       "node_modules"
    ],
    "compileOnSave":true,
    "mocha.requires": [
      "ts-node/register"
   ],
 }